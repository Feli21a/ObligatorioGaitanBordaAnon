@model IEnumerable<ObliGaitanBordaAnon.Models.Resenia>

@{
    ViewData["Title"] = "Página de Inicio";
}

<div class="container mt-5">
    <!-- Sección de bienvenida -->
    <section class="bg-primary text-primary-foreground py-5 text-center">
        <div class="container d-flex flex-column flex-md-row align-items-center justify-content-center gap-4">
            <img src="/ExternalImages/Objetivos.webp" class="rounded-lg small-image" alt="Al Mal Tiempo Buena Cara">
            <div class="text-start text-md-center">
                <h1 class="display-4">Bienvenido a Al Mal Tiempo Buena Cara</h1>
                <p class="lead">Disfruta de una experiencia culinaria excepcional en nuestro acogedor restaurante. Nuestro menú ofrece una selección de platos deliciosos hechos con los mejores ingredientes frescos.</p>
                <a href="@Url.Action("Index", "MenuVM")" class="btn btn-light">Ver menú</a>
            </div>
        </div>
    </section>

    <!-- Sección de reseñas -->
    <section id="reviews" class="bg-light py-5 text-center">
        <div class="container">
            <h2 class="display-4">Lo que dicen nuestros clientes</h2>
            <p class="lead">Descubre lo que opinan los que han disfrutado de nuestra cocina.</p>
            <div class="row mt-4">
                @foreach (var reseña in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-4">
                                    <div>
                                        <h4 class="card-title d-inline"> <i class="bi bi-person-fill mr-2"></i>Cliente</h4>
                                        <p class="text-muted">Cliente satisfecho</p>
                                    </div>
                                </div>
                                <p class="card-text">"@(reseña.Comentario)"</p>
                                <span class="badge bg-success">@reseña.Puntaje/5</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Sección de tipos de clientes -->
    <section id="customer-types" class="py-5 text-center">
        <div class="container">
            <h2 class="display-4">Tipos de Clientes</h2>
            <p class="lead">Descubre las ventajas de ser nuestro cliente</p>
            <div class="row mt-4">
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h4 class="card-title">Cliente Nuevo</h4>
                            <p class="card-text">Disfruta de nuestra deliciosa comida sin descuentos.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h4 class="card-title">Cliente Frecuente</h4>
                            <p class="card-text">Recibe un 10% de descuento en todos tus platos al ser un cliente frecuente.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h4 class="card-title">Cliente VIP</h4>
                            <p class="card-text">Disfruta de un 20% de descuento en todos tus platos con una suscripción mensual.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección de carrusel de imágenes -->
    <section id="carousel" class="py-5">
        <div class="container">
            <h2 class="display-4 text-center">Nuestras Vistas</h2>
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/ExternalImages/IMGInicio1.png" class="d-block w-100 carousel-image" alt="Vista 1">
                    </div>
                    <div class="carousel-item">
                        <img src="/ExternalImages/IMGInicio2.png" class="d-block w-100 carousel-image" alt="Vista 2">
                    </div>
                    <div class="carousel-item">
                        <img src="/ExternalImages/IMGInicio3.png" class="d-block w-100 carousel-image" alt="Vista 3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>
</div>

<style>
    body {
        background-color: #f8f9fa;
        color: #333;
        font-family: 'Arial', sans-serif;
    }

    .display-4 {
        font-weight: bold;
        font-family: 'Roboto', sans-serif;
    }

    .lead, .text-muted {
        font-family: 'Roboto', sans-serif;
    }

    .btn-primary {
        background-color: #3C9BFF;
        border: none;
        padding: 10px 20px;
        font-size: 1.2em;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #357ac4;
        }

    .btn-light {
        background-color: white;
        color: #3C9BFF;
        border: 1px solid #3C9BFF;
    }

        .btn-light:hover {
            background-color: #e6f1ff;
        }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .card-title {
        font-size: 1.4em;
        font-weight: bold;
    }

    .card-text {
        font-size: 1.15em;
        text-align: justify;
    }

    .text-justify {
        text-align: justify;
    }

    .small-image {
        max-width: 100%;
        height: auto;
        max-height: 200px;
        object-fit: cover;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .small-image:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .carousel-image {
        height: 400px; /* Ajusta esta altura según tus necesidades */
        object-fit: cover;
    }

    .bg-primary {
        background-color: #3C9BFF !important;
    }

    .text-primary-foreground {
        color: white !important;
    }
</style>