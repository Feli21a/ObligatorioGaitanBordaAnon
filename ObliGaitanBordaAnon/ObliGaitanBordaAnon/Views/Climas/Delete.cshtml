@model ObliGaitanBordaAnon.Models.Clima

@{
    ViewData["Title"] = "Borrar clima";
}

<h1>Borrar clima</h1>

<div>
    <h4>Clima</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Temperatura):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Temperatura) ºC
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lluvia)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.Lluvia == true)
            {
                <span>Si</span>
            }
            else
            {
                <span>No</span>
            }
        </dd>
        <dt class = "col-sm-2">
            Descripcion del clima:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionClima)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
