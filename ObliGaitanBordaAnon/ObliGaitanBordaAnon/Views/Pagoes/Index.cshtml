@model IEnumerable<ObliGaitanBordaAnon.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<h1><i class="bi bi-cash-coin"></i> <strong>Pagos</strong></h1>

<p>
    <a class="btn btn-warning" asp-action="Create">Generar pago</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                Fecha de pago
            </th>
            <th>
                Metodo de pago
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    $ @Html.DisplayFor(modelItem => item.Monto) (@Html.DisplayFor(modelItem => item.Cotizacion.NombreDivisa))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaPago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetodoPago)
                </td>
                <td>
                    Nro. @Html.DisplayFor(modelItem => item.Reserva.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @if (item.Estado != "Pagado")
                    {
                        <a title="Editar" class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                        @Html.Raw("| ")
                        <a title="Detalles" class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-square-fill"></i></a>
                        @Html.Raw("| ")
                        <a title="Borrar" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                        @Html.Raw("| ")
                        <a title="Confirmar" class="btn btn-success" asp-action="ConfirmarPago" asp-route-idPago="@item.Id"><i class="bi bi-check-lg"></i></a>
                    }
                    else
                    {
                        <a title="Detalles" class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-square-fill"></i></a>
                        @Html.Raw("| ")
                        <a title="Borrar" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
