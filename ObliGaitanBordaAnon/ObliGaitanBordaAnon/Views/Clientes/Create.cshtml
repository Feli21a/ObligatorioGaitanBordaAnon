@model ObliGaitanBordaAnon.Models.Cliente

@{
    ViewData["Title"] = "Crear Cliente";
}

<h1>Agregar cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre del cliente:</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email del cliente:</label>
                <input type="email" asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoCliente" class="control-label">Tipo de cliente:</label>
                <select asp-for="TipoCliente" class="form-select">
                    <option value="Nuevo">Nuevo</option>
                    <option value="Frecuente">Frecuente</option>
                    <option value="VIP">VIP</option>
                </select>
                <span asp-validation-for="TipoCliente" class="text-danger"></span>
            </div>
            <hr />
            <input type="submit" value="Crear" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
