@model ObliGaitanBordaAnon.Models.Cliente

@{
    ViewData["Title"] = "Detalles cliente";
}

<h1>Detalles de @Html.DisplayFor(model => model.Nombre)</h1>

<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Cedula:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ci)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre) del cliente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email) del cliente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Tipo del cliente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoCliente)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-light" asp-action="Index">Volver a la lista</a>
</div>
