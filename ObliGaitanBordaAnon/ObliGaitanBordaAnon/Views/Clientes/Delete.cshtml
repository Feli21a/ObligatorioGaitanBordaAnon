@model ObliGaitanBordaAnon.Models.Cliente
@{
    ViewData["Title"] = "Borrar cliente";
}

<h1>Borrar un cliente</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Nombre)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre) del cliente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email) del cliente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Tipo del cliente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoCliente)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
