@model ObliGaitanBordaAnon.Models.OrdenDetalle

@{
    ViewData["Title"] = "Borrar detalles";
}

<h1>Borrar detalles de orden</h1>

<div>
    <h4>Detalles Orden</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad) de menus:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class = "col-sm-2">
            Nro. @Html.DisplayNameFor(model => model.Menu):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Menu.NombrePlato)
        </dd>
        <dt class = "col-sm-2">
            Nro. @Html.DisplayNameFor(model => model.Orden):
        </dt>
        <dd class = "col-sm-10">
            Nro. @Html.DisplayFor(model => model.Orden.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
