@model ObliGaitanBordaAnon.Models.OrdenDetalle

@{
    ViewData["Title"] = "Detalles orden";
}

<h1>Detalles de la orden NRO. @Html.DisplayFor(model => model.Orden.Id)</h1>

<div>
    <h4>Detalles de la orden</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad) de platos:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Menu):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Menu.NombrePlato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Orden):
        </dt>
        <dd class = "col-sm-10">
            Nro. @Html.DisplayFor(model => model.Orden.Id)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-light" asp-action="Index">Volver a la lista</a>
</div>
