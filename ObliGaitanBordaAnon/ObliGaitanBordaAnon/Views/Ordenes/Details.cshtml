@model ObliGaitanBordaAnon.Models.Ordene

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de la orden</h1>

<div>
    <h4>Orden</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total):
        </dt>
        <dd class = "col-sm-10">
            $ @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reserva):
        </dt>
        <dd class = "col-sm-10">
            Nro. @Html.DisplayFor(model => model.Reserva.Id) ( Mesa: @Html.DisplayFor(model => model.Reserva.Mesa.NumeroMesa) )
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-light" asp-action="Index">Volver a la lista</a>
</div>
