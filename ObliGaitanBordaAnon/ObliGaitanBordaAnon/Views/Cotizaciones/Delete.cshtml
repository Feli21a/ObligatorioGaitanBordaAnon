@model ObliGaitanBordaAnon.Models.Cotizacione

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar cotizacion</h1>

<div>
    <h4>Cotizaciones</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tipo de moneda:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreDivisa)
        </dd>
        <dt class = "col-sm-2">
            Valor:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CotizacionDivisa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
