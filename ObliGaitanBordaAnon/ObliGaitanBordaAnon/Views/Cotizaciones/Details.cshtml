@model ObliGaitanBordaAnon.Models.Cotizacione

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de la cotizacion</h1>

<div>
    <h4>Cotizaciones</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tipo de moneda:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreDivisa)
        </dd>
        <dt class = "col-sm-2">
            Valor:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CotizacionDivisa)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
</div>
