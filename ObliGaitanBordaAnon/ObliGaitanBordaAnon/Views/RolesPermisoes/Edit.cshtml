@model ObliGaitanBordaAnon.Models.RolesPermiso

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar rol</h1>

<h4>Permiso-Roles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RolId" class="control-label">ID del rol:</label>
                <select asp-for="RolId" class="form-control" asp-items="ViewBag.RolId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PermisoId" class="control-label">Id del permiso:</label>
                <select asp-for="PermisoId" class="form-control" asp-items="ViewBag.PermisoId"></select>
            </div>
            <div class="form-group">
                <hr />
                <input type="submit" value="Crear" class="btn btn-success" />
                <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
