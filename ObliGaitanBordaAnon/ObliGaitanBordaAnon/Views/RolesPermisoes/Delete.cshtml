@model ObliGaitanBordaAnon.Models.RolesPermiso

@{
    ViewData["Title"] = "Borrar asignaciones";
}

<h1>Borrar asignacion</h1>

<div>
    <h4>Permiso-Roles</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Permiso):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Permiso.Nombre) (@Html.DisplayFor(model => model.Permiso.Id))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rol) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rol.Nombre) (@Html.DisplayFor(model => model.Rol.Id))
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
