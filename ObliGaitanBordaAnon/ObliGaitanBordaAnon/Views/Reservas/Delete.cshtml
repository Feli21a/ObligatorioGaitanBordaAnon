@model ObliGaitanBordaAnon.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar reserva</h1>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Restaurante (Sucursal):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurante.Nombre) (@Html.DisplayFor(model => model.Restaurante.Direccion))
        </dd>
        <dt class="col-sm-2">
            Fecha de la reserva:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaReservada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado) reserva:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        @if (Model.Nombre == null)
        {
            <dt class="col-sm-2">
                Nombre:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.Nombre) Nro. @Html.DisplayFor(model => model.Cliente.Id)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesa):
        </dt>
        <dd class="col-sm-10">
            Nro. @Html.DisplayFor(model => model.Mesa.NumeroMesa)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
