@model ObliGaitanBordaAnon.Models.Reserva

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles reserva</h1>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha de la reserva:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaReservada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado) reserva:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nombre) Nro. @Html.DisplayFor(model => model.Cliente.Id)
        </dd>
        <dt class="col-sm-2">
            Nombre:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesa):
        </dt>
        <dd class="col-sm-10">
            Nro. @Html.DisplayFor(model => model.Mesa.NumeroMesa)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-light" asp-action="Index">Volver a la lista</a>
</div>
