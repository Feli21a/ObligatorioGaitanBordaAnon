@model ObliGaitanBordaAnon.Models.Menu

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del plato @Html.DisplayFor(model => model.NombrePlato)</h1>

<div>
    <h4>Menu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre del plato:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombrePlato)
        </dd>
        <dt class = "col-sm-2">
            Descripcion del plato:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Precio del menu:
        </dt>
        <dd class = "col-sm-10">
            $ @Html.DisplayFor(model => model.Precio)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-light" asp-action="Index">Volver a la lista</a>
</div>
